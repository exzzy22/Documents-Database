@if (IsToggle)
{
<table>
   <tbody>
      @if (Items.Count()>2)
      {
         @foreach (var item in Items)
          {
            <tr>@item.Name</tr>
          }
                <tr><input type="image" src="Content\collapse.png" alt="Collapse" width="20" height="20" @onclick="Toggle"></tr>
            }
            else
            {
              @foreach (var item in Items)
              {
              <tr>@item.Name</tr>
              }
            }

   </tbody>
    </table>
}
else 
{
    if (Items.Count() <= 2)
    {
        <table>
            <tbody>
                @foreach (var item in Items)
                {
                    <tr>@item.Name</tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table>
           <tbody>
              @for (var i = 0; i < 2; i++)
              {
                  
              <tr>@Items[i].Name</tr>
              }
              <tr><input type="image" src="Content\expand.png" alt="Expand" width="20" height="20" @onclick="Toggle"></tr>
           </tbody>
        </table>
    }
}